# ATF Sentinel - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# GCP Configuration
# ===========================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# Cloud SQL (for production)
CLOUD_SQL_CONNECTION_NAME=your-project:us-central1:atf-sentinel-db

# ===========================================
# Database
# ===========================================
# Local development
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/atf_sentinel

# Production (Cloud SQL) - set via Secret Manager
# DB_USER=postgres
# DB_PASS=your-secure-password
# DB_NAME=atf_sentinel

# ===========================================
# GitHub Integration
# ===========================================
# Personal Access Token or GitHub App token
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Webhook secret (must match what's configured in GitHub)
WEBHOOK_SECRET=your-webhook-secret

# Allowed repositories (JSON array)
ALLOWED_REPOS=["your-org/*", "your-org/specific-repo"]

# ===========================================
# AI Integration (Google Gemini)
# ===========================================
GEMINI_API_KEY=your-gemini-api-key

# ===========================================
# Slack Notifications (Optional)
# ===========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# ===========================================
# Frontend
# ===========================================
# Backend API URL (for frontend to call)
BACKEND_API_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ===========================================
# Development Options
# ===========================================
# Enable SQL query logging
SQL_ECHO=false

# Node environment
NODE_ENV=development
